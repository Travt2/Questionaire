#include <iostream>
using namespace std;

int main() {
   cout << "Hello!" <<endl;
   cout << "what is your name";
   string name;
   cout << "please enter name: ";
   cin >> name;
   cout << "what is your age";
   int age;
   cout << "please enter age: ";
   cin >> age;
   cout << "when were you born";
   char born[10];
   cout << "please enter date born: ";
   cin >> born;
   cout << "what is your birth month zodiac";
   string zodiac;
   cout << "please enter zodiac: ";
   cin >> zodiac;
   cout << name << " is " << age << " and was born on " << born << " and birth month zodiac is " << zodiac << endl;
}